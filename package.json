{
  "name": "bookhive",
  "packageManager": "pnpm@9.14.4",
  "type": "module",
  "scripts": {
    "seed:db": "node ./src/initialize.js",
    "dev": "concurrently --kill-others \"pnpm:dev:backend\" \"pnpm:dev:css\" \"pnpm:dev:frontend\" -r -p none",
    "dev:backend": "nodemon --exec 'pnpm run build:js:backend && pnpm start' --watch src -e ts,tsx | pino-pretty",
    "dev:frontend": "pnpm run build:js:frontend --watch",
    "dev:css": "pnpm run build:css --watch",
    "build:js:frontend": "esbuild src/client/index.tsx --bundle --outfile=public/js/client.js --alias:react=hono/jsx/dom --sourcemap",
    "build:js:backend": "rm -rf dist && node ./esbuild.cjs",
    "build:css": "tailwindcss -i ./src/index.css -o ./public/output.css",
    "build": "concurrently \"pnpm:build:css\" \"pnpm:build:*\" \"pnpm run lexgen --yes\"",
    "test": "echo \"Error: no test specified\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lexgen": "lex gen-server ./src/bsky/lexicon ./lexicons/*",
    "postlexgen": "prettier --write ./src/bsky/lexicon/*",
    "start": "node --require ./dist/instrumentation.cjs ./dist/index.js",
    "ios": "pnpm run --prefix=app ios",
    "android": "pnpm run --prefix=app android"
  },
  "dependencies": {
    "@atproto/api": "^0.13.23",
    "@atproto/common": "^0.4.5",
    "@atproto/identity": "^0.4.3",
    "@atproto/lexicon": "^0.4.4",
    "@atproto/oauth-client-node": "^0.2.5",
    "@atproto/sync": "^0.1.7",
    "@atproto/syntax": "^0.3.1",
    "@atproto/xrpc-server": "^0.7.4",
    "@hono/node-server": "1.13.7",
    "@hono/prometheus": "1.0.1",
    "@hono/zod-validator": "0.4.1",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.54.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.56.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.56.0",
    "@opentelemetry/sdk-metrics": "1.29.0",
    "@opentelemetry/sdk-node": "0.56.0",
    "@opentelemetry/sdk-trace-node": "1.29.0",
    "@opentelemetry/semantic-conventions": "1.28.0",
    "@tailwindcss/cli": "4.0.0-beta.2",
    "@tanstack/react-query": "5.61.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/shimmer": "^1.2.0",
    "axios": "1.7.7",
    "better-sqlite3": "11.5.0",
    "date-fns": "4.1.0",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "esbuild-node-externals": "1.15.0",
    "h3": "1.13.0",
    "hono": "^4.6.12",
    "hono-pino": "0.7.0",
    "html-entities": "2.5.2",
    "ipx": "3.0.1",
    "iron-session": "^8.0.4",
    "jiti": "2.4.0",
    "kysely": "^0.27.5",
    "multiformats": "^13.3.1",
    "ohash": "1.1.4",
    "pino": "^9.6.0",
    "pino-abstract-transport": "2.0.0",
    "prom-client": "15.1.3",
    "sharp": "0.33.5",
    "shimmer": "1.2.1",
    "unstorage": "1.13.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.5.4",
    "@tailwindcss/forms": "0.5.9",
    "@tailwindcss/postcss": "4.0.0-beta.2",
    "@types/ws": "8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^9.1.1",
    "esbuild": "0.24.0",
    "eslint": "^9.17.0",
    "nodemon": "3.1.7",
    "pino-pretty": "13.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "4.0.0-beta.2",
    "tailwindcss-animated": "^1.1.2",
    "typescript": "^5.7.2"
  }
}
