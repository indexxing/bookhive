{
  "lexicon": 1,
  "id": "buzz.bookhive.hiveBook",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "A book within the hive",
      "record": {
        "type": "object",
        "required": [
          "title",
          "authors",
          "createdAt",
          "hiveId",
          "cover",
          "year"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the book",
            "minLength": 1,
            "maxLength": 512
          },
          "authors": {
            "type": "string",
            "description": "The authors of the book (tab separated)",
            "minLength": 1,
            "maxLength": 512
          },
          "hiveId": {
            "type": "string",
            "format": "at-uri",
            "description": "The book's hive id, used to correlate user's books with the hive"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "cover": {
            "type": "blob",
            "description": "Cover image of the book",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000
          },
          "year": {
            "type": "integer",
            "description": "Year of publication"
          }
        }
      }
    }
  }
}
