{
  "lexicon": 1,
  "id": "buzz.bookhive.review",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["createdAt", "book"],
        "properties": {
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "book": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "A reference to the book being reviewed"
          },
          "stars": {
            "type": "integer",
            "description": "Number of stars given to the book (1-10) which will be mapped to 1-5 stars",
            "minimum": 1,
            "maximum": 10
          },
          "comment": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "A reference to a review of the book"
          }
        }
      }
    }
  }
}
